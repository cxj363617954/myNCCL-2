#include<stdio.h>

int main(void)
{
  int A;
  int B;

  printf("Please input A: ");
  scanf("%d",&A);
  do
  {
    printf("Please input B: ");
    scanf("%d",&B);

    if(B != A)
    {
      if(B > A)
         printf("You input number is big\n");
      else
         printf("You input number is smaill\n");
    }
    else
      break;
  }while(B != 0);
  printf("You input number is right: B=%d\n",B);
  return 0;
}
